<section>
    <header>
        <h2>{{ lang.get('footer.recent_posts.title')|default('Recent Updates') }}</h2>
    </header>
    <ul class="dates">
        {% if recent_posts is defined and recent_posts|length > 0 %}
            {% for item in recent_posts %}
                <li>
                    <span class="date">{{ item.published|date('M d') }}</span>
                    <h3><a href="{{ item.url }}">{{ item.title }}</a></h3>
                    <p>{{ item.description|slice(0,80) ~ (item.description|length > 80 ? '…' : '') }}</p>
                </li>
            {% endfor %}
        {% else %}
            <li>
                <span class="date">—</span>
                <h3><a href="#">No recent entries</a></h3>
                <p>Add published content with a date to see it here.</p>
            </li>
        {% endif %}
    </ul>
</section>